@model BlobStorageWebApp.Models.BlobModel

@{
    ViewData["Title"] = "DeleteBlob";
}

<h1>DeleteBlob</h1>

<h3>Are you sure you want to delete this?</h3>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContainerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContainerName)
        </dd>
    </dl>

    <form asp-action="DeleteBlob">
        @Html.HiddenFor(model => model.ContainerName)
        @Html.HiddenFor(model => model.BlobName)
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Back to List", "ListBlob", new { containerName = Model.ContainerName })
    </form>
</div>
